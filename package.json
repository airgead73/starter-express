{
  "name": "starter-design",
  "version": "1.0.0",
  "description": "fullstack application starter using node, express, mongodb, auth0, and gulp. Used for creating design templates.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "server": "NODE_ENV=development nodemon -r dotenv/config index.js",
    "public": "gulp dev",
    "test": "gulp test",
    "watch": "concurrently \"npm:public\" \"npm:server \"",
    "stage": "concurrently \"npm:test\" \"NODE_ENV=test nodemon -r dotenv/config index.js \"",
    "build": "gulp",
    "deploy": "git push heroku v13:main",
    "log": "heroku logs --tail"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/airgead73/starter-ejs.git"
  },
  "keywords": [
    "node",
    "express",
    "mongodb",
    "auth0",
    "gulp"
  ],
  "author": "dan moneypenny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/airgead73/starter-ejs/issues"
  },
  "homepage": "https://github.com/airgead73/starter-ejs#readme",
  "browserslist": [
    ">1%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "cloudinary": "^1.29.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "date-fns": "^2.28.0",
    "ejs": "^3.1.8",
    "express": "^4.17.3",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-openid-connect": "^2.7.2",
    "express-rate-limit": "^6.3.0",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "memorystore": "^1.6.7",
    "mongoose": "^6.3.0",
    "slugify": "^1.6.5",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "autoprefixer": "^10.4.4",
    "concurrently": "^7.1.0",
    "cssnano": "^5.1.7",
    "del": "^6.0.0",
    "dotenv": "^16.0.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-postcss": "^9.0.1",
    "gulp-purgecss": "^4.1.3",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "nodemon": "^2.0.15",
    "postcss-combine-media-query": "^1.0.1",
    "rollup-stream": "^1.24.1",
    "sass": "^1.50.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  },
  "nodemonConfig": {
    "delay": 2500,
    "ext": "js,json",
    "ignore": [
      "assets/scripts/*.js",
      "assets/scss/*.scss",
      "app/views/*",
      "scss/*",
      "*.ejs"
    ]
  }
}
